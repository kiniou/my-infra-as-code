{
  "description": "Vanilla Debian Sid base box built with guest additions + basic provisionning",
  "variables": {
    "box_name": "kiniou/sid64",
    "box_version": "",
    "box_changelog": ""
    },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/buster-preseed.cfg <wait>",
        "auto <wait>",
        "auto-install/enable=true <wait>",
        "locale=en_US <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=localdomain <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "kbd-chooser/method=us <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "net.ifnames=0 <wait>",
        "<enter><wait>"
      ],
      "disk_size": "20280",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "6a901b5abe43d88b39d627e1339d15507cc38f980036b928f835e0f0e957d3d8",
      "iso_checksum_type": "sha256",
      "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-{{user `box_version`}}-amd64-netinst.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": "22",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "vm_name": "buster64",
      "output_directory": "builds/buster64",
      "format": "ovf",
      "name": "buster64",
      "hard_drive_interface": "sata",
      "sata_port_count": 4,
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "echo 'vagrant'| {{.Vars}} sudo --preserve-env --stdin sh '{{.Path}}'",
      "environment_vars": [
        "VAGRANT_BUILDER_FS=/",
        "VAGRANT_BUILDER_HOSTNAME=contrib-buster"
      ],
      "scripts": [
        "scripts/vagrant-setup",
        "scripts/provision.sh",
        "scripts/vb-guest-additions.sh",
        "scripts/minimize.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "builds/{{build_name}}.box"
    },
    {
      "type": "shell-local",
      "script": "scripts/box-metadata.sh",
      "environment_vars": [
        "BOX_FILENAME=builds/{{build_name}}",
        "BOX_VERSION={{user `box_version`}}",
        "BOX_NAME={{user `box_name`}}"
      ]
    }
  ]
}
